                            VerticalCacheLength="{TemplateBinding VerticalCacheSize}"
                            XYFocusKeyboardNavigation="Enabled">
                            <ItemsRepeater.Layout>
                                <UniformGridLayout
                                    ItemsStretch="Fill"
                                    MinColumnSpacing="8"
                                    MinItemHeight="220"
                                    MinItemWidth="128"
                                    MinRowSpacing="8" />
                            </ItemsRepeater.Layout>
