<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bili.Copilot.App.Controls.Base">

    <Style TargetType="local:PartitionItem">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PartitionItem">
                    <local:CardPanel
                        x:Name="RootCard"
                        IsChecked="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.IsSelected}"
                        IsEnableCheck="False">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid
                                x:Name="ContentContainer"
                                Padding="8,0"
                                RowSpacing="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid
                                    Width="68"
                                    Height="68"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                    <local:ImageEx
                                        x:Name="PartitionLogo"
                                        Width="44"
                                        Height="44"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Data.Image.Uri}"
                                        Stretch="Uniform" />
                                </Grid>
                                <TextBlock
                                    x:Name="PartitionName"
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    MaxLines="1"
                                    TextAlignment="Center"
                                    TextTrimming="CharacterEllipsis">
                                    <Run Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Data.Name}" />
                                    <Run
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                        Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.AdditionalText}" />
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </local:CardPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PartitionLineStyle" TargetType="local:PartitionItem">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PartitionItem">
                    <local:CardPanel
                        x:Name="RootCard"
                        IsChecked="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.IsSelected}"
                        IsEnableCheck="False">
                        <Grid HorizontalAlignment="Left">
                            <Grid
                                x:Name="ContentContainer"
                                Margin="12"
                                ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <local:ImageEx
                                    x:Name="PartitionLogo"
                                    Width="18"
                                    Height="18"
                                    VerticalAlignment="Center"
                                    Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Data.Image.Uri}"
                                    Stretch="Uniform" />
                                <TextBlock
                                    x:Name="PartitionName"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    MaxLines="1"
                                    TextAlignment="Center"
                                    TextTrimming="CharacterEllipsis">
                                    <Run Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Data.Name}" />
                                    <Run
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                        Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.AdditionalText}" />
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </local:CardPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
