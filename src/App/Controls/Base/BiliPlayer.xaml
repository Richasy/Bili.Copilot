<?xml version="1.0" encoding="utf-8" ?>
<local:BiliPlayerBase
    x:Class="Bili.Copilot.App.Controls.Base.BiliPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bili.Copilot.App.Controls.Base"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:FFmpegPlayerConverter x:Key="FFmpegPlayerConverter" />
        <local:NativePlayerConverter x:Key="NativePlayerConverter" />
    </UserControl.Resources>

    <Grid>
        <local:FFmpegPlayer
            x:Name="FFmpegPlayer"
            x:Load="{x:Bind IsFFmpeg, Mode=OneWay}"
            Content="{x:Bind Overlay, Mode=OneWay}"
            Player="{x:Bind ViewModel.Player.Player, Mode=OneWay, Converter={StaticResource FFmpegPlayerConverter}}" />
        <local:NativePlayer
            x:Name="NativePlayer"
            x:Load="{x:Bind IsFFmpeg, Mode=OneWay, Converter={StaticResource ObjectToBoolReverseConverter}}"
            Content="{x:Bind Overlay, Mode=OneWay}"
            Player="{x:Bind ViewModel.Player.Player, Mode=OneWay, Converter={StaticResource NativePlayerConverter}}" />
    </Grid>
</local:BiliPlayerBase>
