<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bili.Copilot.App.Controls.Danmaku">
    <Style TargetType="local:DanmakuView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DanmakuView">
                    <Grid x:Name="RootGrid">
                        <Canvas x:Name="Canvas" />
                        <Grid x:Name="ScrollContainer" />
                        <Grid x:Name="TopContainer" />
                        <Grid x:Name="BottomContainer" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
