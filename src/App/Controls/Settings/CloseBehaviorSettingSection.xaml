<?xml version="1.0" encoding="utf-8" ?>
<local:SettingSection
    x:Class="Bili.Copilot.App.Controls.Settings.CloseBehaviorSettingSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Bili.Copilot.App.Controls.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:Bili.Copilot.App.Extensions"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:Bili.Copilot.App.Controls.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <labs:SettingsCard Description="{ext:Locale Name=HideWhenCloseDescription}" Header="{ext:Locale Name=HideWhenClose}">
        <labs:SettingsCard.HeaderIcon>
            <base:FluentIcon Symbol="DismissCircle" />
        </labs:SettingsCard.HeaderIcon>
        <ToggleSwitch IsOn="{x:Bind ViewModel.HideWhenCloseWindow, Mode=TwoWay}" />
    </labs:SettingsCard>
</local:SettingSection>
