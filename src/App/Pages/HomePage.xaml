<?xml version="1.0" encoding="utf-8" ?>
<base:PageBase
    x:Class="Bili.Copilot.App.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Bili.Copilot.App.Controls.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bili.Copilot.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modules="using:Bili.Copilot.App.Controls.Modules"
    mc:Ignorable="d">

    <ScrollViewer Margin="0,12,0,0" Style="{StaticResource PageScrollViewerStyle}">
        <StackPanel Margin="0,0,0,20" Spacing="16">
            <modules:AccountModule />
            <modules:SearchBoxModule />
        </StackPanel>
    </ScrollViewer>
</base:PageBase>
