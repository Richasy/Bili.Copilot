<?xml version="1.0" encoding="utf-8" ?>
<local:WindowBase
    x:Class="Bili.Copilot.App.Forms.PlayerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Bili.Copilot.App.Controls.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bili.Copilot.App.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <SplitView
            x:Name="MainSplitView"
            CompactPaneLength="0"
            DisplayMode="CompactOverlay"
            IsPaneOpen="False"
            LightDismissOverlayMode="On"
            OpenPaneLength="400"
            PaneBackground="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            PanePlacement="Right">
            <SplitView.Pane>
                <Grid>
                    <Frame x:Name="SplitFrame" />
                </Grid>
            </SplitView.Pane>
            <Grid>
                <Frame x:Name="MainFrame" />
            </Grid>
        </SplitView>
        <Grid x:Name="TipContainer" Visibility="Collapsed" />
    </Grid>
</local:WindowBase>
