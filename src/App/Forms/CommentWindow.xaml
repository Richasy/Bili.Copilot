<?xml version="1.0" encoding="utf-8" ?>
<local:WindowBase
    x:Class="Bili.Copilot.App.Forms.CommentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Bili.Copilot.App.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modules="using:Bili.Copilot.App.Controls.Modules"
    xmlns:controls="using:Bili.Copilot.App.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:AppTitleBar
            x:Name="CustomTitleBar" />
        <modules:CommentModule
            Grid.Row="1"
            Margin="0,0,0,12"
            DataContext="{x:Bind _viewModel.Comments, Mode=OneWay}"
            ViewModel="{x:Bind _viewModel.Comments, Mode=OneWay}" />
    </Grid>
</local:WindowBase>
