<?xml version="1.0" encoding="utf-8" ?>
<local:PgcPlayerPageBase
    x:Class="BiliCopilot.UI.Pages.Overlay.PgcPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliCopilot.UI.Pages.Overlay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mpv="using:BiliCopilot.UI.Controls.Mpv"
    mc:Ignorable="d">

    <Grid>
        <mpv:MpvPlayer ViewModel="{x:Bind ViewModel.Player, Mode=OneWay}" />
        <mpv:MpvTransportControl
            MaxWidth="600"
            Margin="12"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            ViewModel="{x:Bind ViewModel.Player, Mode=OneWay}" />
    </Grid>
</local:PgcPlayerPageBase>
