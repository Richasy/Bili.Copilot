<?xml version="1.0" encoding="utf-8" ?>
<base:LayoutPageBase
    x:Class="BiliCopilot.UI.Pages.Overlay.WebPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Richasy.WinUI.Share.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliCopilot.UI.Pages.Overlay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:CommunityToolkit.Labs.WinUI"
    mc:Ignorable="d">

    <Grid>
        <WebView2
            x:Name="MainView"
            DefaultBackgroundColor="Transparent"
            NavigationCompleted="OnNavigationCompletedAsync" />
        <winui:Shimmer
            x:Name="LoadingShimmer"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
    </Grid>
</base:LayoutPageBase>
