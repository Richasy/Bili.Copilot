<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:community="using:CommunityToolkit.WinUI.Controls">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="BasicPlayerButtonBackground" Color="#55000000" />
            <SolidColorBrush x:Key="BasicPlayerButtonBackgroundPointerOver" Color="#AA000000" />
            <SolidColorBrush x:Key="BasicPlayerButtonBackgroundPressed" Color="#A0000000" />
            <SolidColorBrush x:Key="BasicPlayerButtonBackgroundDisabled" Color="#0BFFFFFF" />
            <SolidColorBrush x:Key="BasicPlayerButtonForeground" Color="White" />
            <SolidColorBrush x:Key="BasicPlayerButtonForegroundPointerOver" Color="White" />
            <SolidColorBrush x:Key="BasicPlayerButtonForegroundPressed" Color="#C5FFFFFF" />
            <SolidColorBrush x:Key="BasicPlayerButtonForegroundDisabled" Color="#87FFFFFF" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="BasicPlayerButtonBackground" Color="Transparent" />
            <SolidColorBrush x:Key="BasicPlayerButtonBackgroundPointerOver" Color="#15FFFFFF" />
            <SolidColorBrush x:Key="BasicPlayerButtonBackgroundPressed" Color="#08FFFFFF" />
            <SolidColorBrush x:Key="BasicPlayerButtonBackgroundDisabled" Color="#0BFFFFFF" />
            <SolidColorBrush x:Key="BasicPlayerButtonForeground" Color="White" />
            <SolidColorBrush x:Key="BasicPlayerButtonForegroundPointerOver" Color="White" />
            <SolidColorBrush x:Key="BasicPlayerButtonForegroundPressed" Color="#C5FFFFFF" />
            <SolidColorBrush x:Key="BasicPlayerButtonForegroundDisabled" Color="#87FFFFFF" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="HighContrast">
            <StaticResource x:Key="BasicPlayerButtonBackground" ResourceKey="SystemControlBackgroundBaseLowBrush" />
            <StaticResource x:Key="BasicPlayerButtonBackgroundPointerOver" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="BasicPlayerButtonBackgroundPressed" ResourceKey="SystemColorHighlightTextColorBrush" />
            <StaticResource x:Key="BasicPlayerButtonBackgroundDisabled" ResourceKey="SystemControlBackgroundBaseLowBrush" />
            <StaticResource x:Key="BasicPlayerButtonForeground" ResourceKey="SystemColorButtonTextColorBrush" />
            <StaticResource x:Key="BasicPlayerButtonForegroundPointerOver" ResourceKey="SystemControlHighlightBaseHighBrush" />
            <StaticResource x:Key="BasicPlayerButtonForegroundPressed" ResourceKey="SystemControlHighlightBaseHighBrush" />
            <StaticResource x:Key="BasicPlayerButtonForegroundDisabled" ResourceKey="SystemControlDisabledBaseMediumLowBrush" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <Style x:Key="PageScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollMode" Value="Disabled" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <Style x:Key="PageScrollViewStyle" TargetType="ScrollView">
        <Setter Property="HorizontalScrollMode" Value="Disabled" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>

    <Style x:Key="HiddenButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="1" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Opacity" Value="0" />
        <Setter Property="UseSystemFocusVisuals" Value="False" />
        <Setter Property="AutomationProperties.AccessibilityView" Value="Raw" />
        <Setter Property="IsTabStop" Value="False" />
    </Style>

    <Style x:Key="PageProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="Width" Value="28" />
        <Setter Property="Height" Value="28" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="AppContentControlStyle" TargetType="ContentControl">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
    </Style>

    <Style TargetType="base:LoadingWidget">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Margin" Value="20" />
