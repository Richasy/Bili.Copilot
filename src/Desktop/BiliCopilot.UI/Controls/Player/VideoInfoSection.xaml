<?xml version="1.0" encoding="utf-8" ?>
<local:VideoPlayerPageControlBase
    x:Class="BiliCopilot.UI.Controls.Player.VideoInfoSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliCopilot.UI.Controls.Player"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView Style="{StaticResource PageScrollViewStyle}">
        <StackPanel Margin="16,12" Spacing="20">
            <local:VideoDescriptorControl ViewModel="{x:Bind ViewModel}" />
            <local:VideoOperationControl ViewModel="{x:Bind ViewModel}" />
        </StackPanel>
    </ScrollView>
</local:VideoPlayerPageControlBase>
