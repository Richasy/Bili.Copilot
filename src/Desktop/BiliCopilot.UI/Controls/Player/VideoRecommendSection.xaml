<?xml version="1.0" encoding="utf-8" ?>
<local:VideoRecommendSectionBase
    x:Class="BiliCopilot.UI.Controls.Player.VideoRecommendSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:BiliCopilot.UI.Controls.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:BiliCopilot.UI.ViewModels.Items"
    xmlns:local="using:BiliCopilot.UI.Controls.Player"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:repeater="using:Richasy.WinUIKernel.Share.Base.Repeater"
    mc:Ignorable="d">

    <Grid>
        <ScrollView
            x:Name="VideoScrollView"
            Padding="16,0"
            Style="{StaticResource PageScrollViewStyle}">
            <Grid Margin="0,16">
                <repeater:AppRepeater x:Name="VideoRepeater" ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                    <repeater:AppRepeater.ItemTemplate>
                        <DataTemplate x:DataType="items:VideoItemViewModel">
                            <components:VideoCardControl Style="{StaticResource PlayerRecommendVideoCardStyle}" ViewModel="{x:Bind}" />
                        </DataTemplate>
                    </repeater:AppRepeater.ItemTemplate>
                    <repeater:AppRepeater.Layout>
                        <StackLayout Spacing="12" />
                    </repeater:AppRepeater.Layout>
                </repeater:AppRepeater>
            </Grid>
        </ScrollView>
    </Grid>
</local:VideoRecommendSectionBase>
