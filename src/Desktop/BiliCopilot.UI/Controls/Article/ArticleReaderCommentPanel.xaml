<?xml version="1.0" encoding="utf-8" ?>
<local:ArticleReaderPageControlBase
    x:Class="BiliCopilot.UI.Controls.Article.ArticleReaderCommentPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:comment="using:BiliCopilot.UI.Controls.Comment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliCopilot.UI.Controls.Article"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <UserControl.Resources>
        <media:AttachedCardShadow
            x:Key="CardShadow"
            BlurRadius="12"
            CornerRadius="8"
            InnerContentClipMode="CompositionMaskBrush"
            Opacity="0.08"
            Offset="0,1,2" />
    </UserControl.Resources>

    <Grid>
        <Border
            ui:Effects.Shadow="{StaticResource CardShadow}"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource OverlayCornerRadius}" />
        <Grid>
            <comment:CommentMainPanel ViewModel="{x:Bind ViewModel.CommentModule, Mode=OneWay}" />
        </Grid>
    </Grid>
</local:ArticleReaderPageControlBase>
