<?xml version="1.0" encoding="utf-8" ?>
<local:VideoPartitionItemControlBase
    x:Class="BiliCopilot.UI.Controls.VideoPartition.VideoPartitionItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliCopilot.UI.Controls.VideoPartition"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid ColumnSpacing="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image
            Width="18"
            Height="18"
            VerticalAlignment="Center"
            Source="{x:Bind ViewModel.Logo, Mode=OneWay, Converter={StaticResource BitmapConverter}}"
            Stretch="Uniform" />
        <TextBlock
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{x:Bind ViewModel.Title, Mode=OneWay}" />
    </Grid>
</local:VideoPartitionItemControlBase>
