<?xml version="1.0" encoding="utf-8" ?>
<local:PopularSectionItemControlBase
    x:Class="BiliCopilot.UI.Controls.Popular.PopularSectionItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:BiliCopilot.UI.Controls.Popular"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="12">
        <ic:SymbolIcon
            VerticalAlignment="Center"
            FontSize="14"
            Symbol="{x:Bind ViewModel.Icon, Mode=OneWay}" />
        <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.Title, Mode=OneWay}" />
    </StackPanel>
</local:PopularSectionItemControlBase>
