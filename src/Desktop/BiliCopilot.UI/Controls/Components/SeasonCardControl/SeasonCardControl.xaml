            <Setter.Value>
                <ControlTemplate TargetType="local:SeasonCardControl">
                    <local:CardControl Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.PlayCommand}">
                        <Grid>
                            <local:PgcCoverImage
                                CornerRadius="{StaticResource ControlCornerRadius}"
                                Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Cover}"
                                ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Title}" />
                            <StackPanel
                                Padding="12,8"
                                VerticalAlignment="Bottom"
                                Spacing="8">
                                <base:TrimTextBlock
                                    FontWeight="Bold"
                                    Foreground="White"
                                    MaxLines="1"
                                    Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Title}" />
                                <Border
                                    Padding="8,4"
                                    HorizontalAlignment="Left"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Subtitle, Converter={StaticResource ObjectToVisibilityConverter}}">
                                    <Border.Background>
                                        <SolidColorBrush Opacity="0.24" Color="Black" />
                                    </Border.Background>
                                    <base:TrimTextBlock
                                        FontSize="12"
                                        Foreground="White"
                                        MaxLines="1"
                                        Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Subtitle}" />
                                </Border>
                            </StackPanel>
                            <Border
                                Margin="8"
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="{ThemeResource AccentFillColorTertiaryBrush}"
                                CornerRadius="{StaticResource ControlCornerRadius}"
                                Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Highlight, Converter={StaticResource ObjectToVisibilityConverter}}">
                                <TextBlock
                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Highlight}" />
                            </Border>
                        </Grid>
                        <local:CardControl.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.OpenInBroswerCommand}" Text="{ext:Locale Name=OpenInBrowser}">
                                    <MenuFlyoutItem.Icon>
                                        <ic:SymbolIcon Symbol="Globe" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.MarkWantWatchCommand}"
                                    IsEnabled="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.InWantWatch, Converter={StaticResource ObjectToBoolReverseConverter}}"
                                    Text="{ext:Locale Name=MarkWantWatch}">
                                    <MenuFlyoutItem.Icon>
                                        <ic:SymbolIcon Symbol="Thinking" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.MarkWatchingCommand}"
                                    IsEnabled="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.InWatching, Converter={StaticResource ObjectToBoolReverseConverter}}"
                                    Text="{ext:Locale Name=MarkWatching}">
                                    <MenuFlyoutItem.Icon>
                                        <ic:SymbolIcon Symbol="Eye" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem
                                    Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.MarkWatchedCommand}"
                                    IsEnabled="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.InWatched, Converter={StaticResource ObjectToBoolReverseConverter}}"
                                    Text="{ext:Locale Name=MarkWatched}">
                                    <MenuFlyoutItem.Icon>
                                        <ic:SymbolIcon Symbol="Folder" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Command="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.UnfollowCommand}" Text="{ext:Locale Name=Unfollow}">
                                    <MenuFlyoutItem.Icon>
                                        <ic:SymbolIcon Foreground="{ThemeResource SystemFillColorCriticalBrush}" Symbol="HeartBroken" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </local:CardControl.ContextFlyout>
                    </local:CardControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PlayerSeasonCardStyle" TargetType="local:SeasonCardControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SeasonCardControl">
                    <Grid>
                        <local:PgcCoverImage
                            BlurRatio="0.28"
                            CornerRadius="{StaticResource ControlCornerRadius}"
                            Source="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Cover}"
                            ToolTipService.ToolTip="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Title}" />
                        <base:TrimTextBlock
                            Margin="12,8"
                            VerticalAlignment="Bottom"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            MaxLines="1"
                            Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Title}" />
                        <Border
                            Margin="8"
                            Padding="8,4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="{ThemeResource AccentFillColorTertiaryBrush}"
                            CornerRadius="{StaticResource ControlCornerRadius}"
                            Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ViewModel.Highlight, Converter={StaticResource ObjectToVisibilityConverter}}">
                            <TextBlock
                                Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
