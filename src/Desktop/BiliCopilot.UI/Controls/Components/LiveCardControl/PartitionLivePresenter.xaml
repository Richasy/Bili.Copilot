<?xml version="1.0" encoding="utf-8" ?>
<local:LiveCardPresenter
    x:Class="BiliCopilot.UI.Controls.Components.PartitionLivePresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:controls="using:BiliCopilot.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:BiliCopilot.UI.Extensions"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:local="using:BiliCopilot.UI.Controls.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="116" />
        </Grid.RowDefinitions>
        <controls:BasicCoverImage
            CornerRadius="4,4,0,0"
            DecodeWidth="600"
            Source="{x:Bind ViewModel.Cover, Mode=OneWay}" />
        <Grid
            Margin="6"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
            <Ellipse
                Width="35"
                Height="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="Black"
                Opacity="0.7" />
            <controls:BasicCoverImage
                Width="32"
                Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="16"
                DecodeWidth="100"
                Source="{x:Bind ViewModel.Avatar, Mode=OneWay}"
                ToolTipService.ToolTip="{x:Bind ViewModel.Author, Mode=OneWay}" />
        </Grid>

        <Grid
            Grid.Row="1"
            Padding="16,12,16,16"
            RowSpacing="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <base:TrimTextBlock
                VerticalAlignment="Center"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Text="{x:Bind ViewModel.Author, Mode=OneWay}" />

            <base:TrimTextBlock
                Grid.Row="1"
                HorizontalAlignment="Left"
                Text="{x:Bind ViewModel.Title, Mode=OneWay}" />

            <Grid Grid.Row="2" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <base:TrimTextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    MaxLines="1"
                    Text="{x:Bind ViewModel.Subtitle, Mode=OneWay}" />
                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="4"
                    ToolTipService.ToolTip="{ext:Locale Name=Viewer}">
                    <ic:SymbolIcon
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                        Symbol="Eye" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind ViewModel.ViewerCount, Converter={StaticResource CountConverter}, Mode=OneWay}"
                        TextLineBounds="Tight" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</local:LiveCardPresenter>
