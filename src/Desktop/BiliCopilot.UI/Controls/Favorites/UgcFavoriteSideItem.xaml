<?xml version="1.0" encoding="utf-8" ?>
<local:UgcFavoriteControlBase
    x:Class="BiliCopilot.UI.Controls.Favorites.UgcFavoriteSideItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:controls="using:BiliCopilot.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliCopilot.UI.Controls.Favorites"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="52" ColumnSpacing="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <controls:BasicCoverImage
            Width="40"
            Height="40"
            VerticalAlignment="Center"
            CornerRadius="20"
            DecodeWidth="100"
            Source="{x:Bind ViewModel.Cover, Mode=OneWay}" />
        <base:TrimTextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            MaxLines="1"
            Text="{x:Bind ViewModel.Data.Title, Mode=OneWay}" />
    </Grid>
</local:UgcFavoriteControlBase>
