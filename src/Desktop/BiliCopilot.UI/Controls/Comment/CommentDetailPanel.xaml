<?xml version="1.0" encoding="utf-8" ?>
<local:CommentDetailPanelBase
    x:Class="BiliCopilot.UI.Controls.Comment.CommentDetailPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:BiliCopilot.UI.Controls.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:BiliCopilot.UI.ViewModels.Items"
    xmlns:local="using:BiliCopilot.UI.Controls.Comment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <components:CommentItemControl
            Margin="16,0"
            IsMoreEnabled="False"
            ViewModel="{x:Bind ViewModel.Data, Mode=OneWay}" />
        <ScrollView
            x:Name="CommentScrollView"
            Grid.Row="1"
            Padding="0"
            Style="{StaticResource PageScrollViewStyle}">
            <Grid Margin="16,0">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Comments, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="items:CommentItemViewModel">
                            <components:CommentItemControl ViewModel="{x:Bind}" />
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="4" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </Grid>
        </ScrollView>
        <components:LoadingWidget Grid.Row="1" Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
    </Grid>
</local:CommentDetailPanelBase>
