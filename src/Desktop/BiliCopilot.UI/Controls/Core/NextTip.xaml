<?xml version="1.0" encoding="utf-8" ?>
<local:PlayerControlBase
    x:Class="BiliCopilot.UI.Controls.Core.NextTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:BiliCopilot.UI.Extensions"
    xmlns:local="using:BiliCopilot.UI.Controls.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        x:Name="RootPanel"
        Width="320"
        Background="{ThemeResource AcrylicInAppFillColorCustomBrush}"
        CornerRadius="{StaticResource OverlayCornerRadius}"
        Visibility="Collapsed">
        <StackPanel Margin="16,12">
            <TextBlock Text="{x:Bind ViewModel.NextButtonToolTip, Mode=OneWay}" TextWrapping="Wrap" />
        </StackPanel>
        <Grid Margin="20,0,20,8" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <HyperlinkButton
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.PlayNextCommand, Mode=OneWay}"
                Content="{ext:Locale Name=PlayNow}" />
            <HyperlinkButton
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Background="Transparent"
                Command="{x:Bind ViewModel.HideNextTipCommand, Mode=OneWay}"
                Content="{ext:Locale Name=Cancel}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </Grid>
        <ProgressBar
            x:Name="ProgressRect"
            Height="4"
            HorizontalAlignment="Stretch"
            Background="Transparent"
            Maximum="8" />
        <animations:Implicit.ShowAnimations>
            <animations:OpacityAnimation
                From="0.0"
                To="1.0"
                Duration="0:0:0.25" />
        </animations:Implicit.ShowAnimations>
        <animations:Implicit.HideAnimations>
            <animations:OpacityAnimation
                From="1.0"
                To="0.0"
                Duration="0:0:0.25" />
        </animations:Implicit.HideAnimations>
    </StackPanel>
</local:PlayerControlBase>
