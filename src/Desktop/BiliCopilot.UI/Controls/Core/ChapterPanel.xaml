<?xml version="1.0" encoding="utf-8" ?>
<local:PlayerControlBase
    x:Class="BiliCopilot.UI.Controls.Core.ChapterPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:BiliCopilot.UI.ViewModels.Items"
    xmlns:local="using:BiliCopilot.UI.Controls.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    SizeChanged="OnSizeChanged"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Name="ChapterItemTemplate" x:DataType="items:ChapterItemViewModel">
            <Button
                Width="12"
                Height="12"
                HorizontalAlignment="Left"
                Click="OnChapterItemClick"
                CornerRadius="6"
                Style="{StaticResource AvatarButtonStyle}"
                Visibility="{x:Bind IsPlaying, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
                <ToolTipService.ToolTip>
                    <ToolTip>
                        <TextBlock LineHeight="20" TextAlignment="Center">
                            <Run FontWeight="Bold" Text="{x:Bind Title, Mode=OneWay}" />
                            <LineBreak />
                            <Run
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind Position, Mode=OneWay, Converter={StaticResource PlayerPositionConverter}}" />
                        </TextBlock>
                    </ToolTip>
                </ToolTipService.ToolTip>
                <Grid>
                    <Ellipse
                        Width="10"
                        Height="10"
                        VerticalAlignment="Center"
                        Fill="#5c5c5c"
                        Visibility="{x:Bind IsPlayed, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}" />
                    <Ellipse
                        Width="10"
                        Height="10"
                        VerticalAlignment="Center"
                        Fill="{ThemeResource AccentFillColorDefaultBrush}"
                        Visibility="{x:Bind IsPlayed, Mode=OneWay}" />
                </Grid>
            </Button>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="RootGrid" HorizontalAlignment="Stretch" />
</local:PlayerControlBase>
