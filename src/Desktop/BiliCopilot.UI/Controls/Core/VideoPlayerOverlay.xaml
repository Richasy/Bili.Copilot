<?xml version="1.0" encoding="utf-8" ?>
<local:MpvPlayerControlBase
    x:Class="BiliCopilot.UI.Controls.Core.VideoPlayerOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:BiliCopilot.UI.Extensions"
    xmlns:imageex="using:ImageEx"
    xmlns:local="using:BiliCopilot.UI.Controls.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Rectangle
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Fill="Black"
            Visibility="{x:Bind ViewModel.IsBackdropVisible, Mode=OneWay}" />
        <base:LoadingWidget
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{ext:Locale Name=LoadingAndWait}"
            Visibility="{x:Bind ViewModel.IsSourceLoading, Mode=OneWay}" />
        <Grid Visibility="{x:Bind ViewModel.IsSourceLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Height="60" Visibility="{x:Bind ViewModel.IsControlVisible, Mode=OneWay}">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0.0" Color="{ThemeResource SystemChromeLowColor}" />
                            <GradientStop Offset="1" Color="{ThemeResource SystemControlTransparentColor}" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
                <base:AppTitleBar
                    x:Name="HeaderBar"
                    Title="{x:Bind Source.Title, Mode=OneWay}"
                    Height="48"
                    VerticalAlignment="Top">
                    <base:AppTitleBar.IconElement>
                        <ImageIcon Source="ms-appx:///Assets/StoreLogo.png" />
                    </base:AppTitleBar.IconElement>
                </base:AppTitleBar>
                <animations:Implicit.ShowAnimations>
                    <animations:OpacityAnimation
                        From="0.0"
                        To="1.0"
                        Duration="0:0:0.2" />
                    <animations:TranslationAnimation
                        From="0,-40,0"
                        To="0,0,0"
                        Duration="0:0:0.25" />
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:OpacityAnimation
                        From="1.0"
                        To="0.0"
                        Duration="0:0:0.2" />
                    <animations:TranslationAnimation
                        From="0,0,0"
                        To="0,-40,0"
                        Duration="0:0:0.25" />
                </animations:Implicit.HideAnimations>
            </Grid>

            <base:LoadingWidget
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{ext:Locale Name=LoadingAndWait}"
                Visibility="{x:Bind ViewModel.IsFileLoading, Mode=OneWay}" />
            <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.IsFileLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
                <local:OverlayTransportControl
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    ViewModel="{x:Bind ViewModel, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.IsControlVisible, Mode=OneWay}">
                    <animations:Implicit.ShowAnimations>
                        <animations:OpacityAnimation
                            From="0.0"
                            To="1.0"
                            Duration="0:0:0.2" />
                        <animations:TranslationAnimation
                            From="0,80,0"
                            To="0,0,0"
                            Duration="0:0:0.25" />
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:OpacityAnimation
                            From="1.0"
                            To="0.0"
                            Duration="0:0:0.2" />
                        <animations:TranslationAnimation
                            From="0,0,0"
                            To="0,80,0"
                            Duration="0:0:0.25" />
                    </animations:Implicit.HideAnimations>
                    <local:OverlayTransportControl.LeftElement>
                        <Grid Background="{ThemeResource SmokeFillColorDefaultBrush}" CornerRadius="{StaticResource ControlCornerRadius}">
                            <Button
                                Padding="8"
                                Background="Transparent"
                                BorderThickness="0">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <imageex:ImageEx
                                        Width="80"
                                        Height="60"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        Source="{x:Bind Source.Cover, Mode=OneWay, Converter={StaticResource BitmapConverter}}"
                                        Stretch="UniformToFill" />
                                    <StackPanel
                                        x:Name="DetailPanel"
                                        Grid.Column="1"
                                        Spacing="4">
                                        <base:TrimTextBlock
                                            FontSize="12"
                                            FontWeight="Bold"
                                            MaxLines="1"
                                            Text="{x:Bind Source.UpName, Mode=OneWay}" />
                                        <base:TrimTextBlock
                                            FontSize="12"
                                            MaxLines="1"
                                            Text="{x:Bind Source.PublishRelativeTime, Mode=OneWay}" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border
                                                Padding="8,4"
                                                Background="{ThemeResource ControlFillColorInputActiveBrush}"
                                                CornerRadius="8">
                                                <base:IconTextBlock
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    IconBrush="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Symbol="PlayCircle"
                                                    Text="{x:Bind Source.PlayCount, Mode=OneWay, Converter={StaticResource CountConverter}}"
                                                    ToolTipService.ToolTip="{ext:Locale Name=PlayCount}" />
                                            </Border>
                                            <Border
                                                Padding="8,4"
                                                Background="{ThemeResource ControlFillColorInputActiveBrush}"
                                                CornerRadius="8">
                                                <base:IconTextBlock
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    IconBrush="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Symbol="Eye"
                                                    Text="{x:Bind Source.OnlineCountText, Mode=OneWay}" />
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </Grid>
                    </local:OverlayTransportControl.LeftElement>
                </local:OverlayTransportControl>
            </Grid>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="FullState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="880" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DetailPanel.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</local:MpvPlayerControlBase>
