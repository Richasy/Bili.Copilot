<?xml version="1.0" encoding="utf-8" ?>
<local:MpvPlayerControlBase
    x:Class="BiliCopilot.UI.Controls.Core.PgcPlayerOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:base="using:Richasy.WinUIKernel.Share.Base"
    xmlns:comment="using:BiliCopilot.UI.Controls.Comment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:danmaku="using:BiliCopilot.UI.Controls.Danmaku"
    xmlns:ext="using:BiliCopilot.UI.Extensions"
    xmlns:ic="using:FluentIcons.WinUI"
    xmlns:imageex="using:ImageEx"
    xmlns:items="using:BiliCopilot.UI.ViewModels.Items"
    xmlns:local="using:BiliCopilot.UI.Controls.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:player="using:BiliCopilot.UI.Controls.Player"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Button
                x:Name="IncreaseSpeedButton"
                Command="{x:Bind ViewModel.IncreaseSpeedCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator
                        Key="Up"
                        IsEnabled="True"
                        Modifiers="Control" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="DecreaseSpeedButton"
                Command="{x:Bind ViewModel.DecreaseSpeedCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator
                        Key="Down"
                        IsEnabled="True"
                        Modifiers="Control" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="IncreaseVolumeButton"
                Command="{x:Bind ViewModel.IncreaseVolumeCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Up" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="DecreaseVolumeButton"
                Command="{x:Bind ViewModel.DecreaseVolumeCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Down" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="ForwardSkipButton"
                Command="{x:Bind ViewModel.ForwardSkipCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Right" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="BackwardSkipButton"
                Command="{x:Bind ViewModel.BackwardSkipCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Left" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="HiddenMiniViewButton"
                Command="{x:Bind ViewModel.ToggleCompactOverlayCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator
                        Key="M"
                        IsEnabled="True"
                        Modifiers="Control" />
                    <KeyboardAccelerator Key="F9" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="HiddenFullScreenButton"
                Command="{x:Bind ViewModel.ToggleFullScreenCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="F11" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button
                x:Name="BackToDefaultButton"
                Command="{x:Bind ViewModel.BackToDefaultModeCommand, Mode=OneWay}"
                Style="{StaticResource HiddenButtonStyle}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Escape" IsEnabled="True" />
                </Button.KeyboardAccelerators>
            </Button>
        </Grid>
        <Rectangle
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Fill="Black"
            Visibility="{x:Bind ViewModel.IsBackdropVisible, Mode=OneWay}" />
        <base:LoadingWidget
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{ext:Locale Name=LoadingAndWait}"
            Visibility="{x:Bind ViewModel.IsSourceLoading, Mode=OneWay}" />
        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}"
            Visibility="{x:Bind Source.ErrorMessage, Mode=OneWay, Converter={StaticResource ObjectToVisibilityConverter}}">
            <base:TrimTextBlock
                MaxWidth="320"
                FontSize="12"
                IsTextSelectionEnabled="True"
                MaxLines="5"
                Text="{x:Bind Source.ErrorMessage, Mode=OneWay}" />
        </Border>
        <Grid Visibility="{x:Bind ViewModel.IsSourceLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Height="60" Visibility="{x:Bind ViewModel.IsControlVisible, Mode=OneWay}">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0.0" Color="{ThemeResource SystemChromeLowColor}" />
                            <GradientStop Offset="1" Color="{ThemeResource SystemControlTransparentColor}" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
                <base:AppTitleBar
                    x:Name="HeaderBar"
                    Title="{x:Bind Source.EpisodeTitle, Mode=OneWay}"
                    Height="48"
                    VerticalAlignment="Top"
                    TitleMaxWidth="300">
                    <base:AppTitleBar.IconElement>
                        <ImageIcon Source="ms-appx:///Assets/StoreLogo.png" />
                    </base:AppTitleBar.IconElement>
                    <base:AppTitleBar.Footer>
                        <StackPanel Orientation="Horizontal">
                            <player:SubtitleButton
                                x:Name="SubtitleButton"
                                VerticalAlignment="Center"
                                ViewModel="{x:Bind Source.Subtitle, Mode=OneWay}" />
                            <ComboBox
                                x:Name="FormatComboBox"
                                MinWidth="120"
                                VerticalAlignment="Center"
                                ItemsSource="{x:Bind Source.Formats, Mode=OneWay}"
                                SelectedItem="{x:Bind Source.SelectedFormat, Mode=OneWay}"
                                SelectionChanged="OnFormatChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="items:PlayerFormatItemViewModel">
                                        <TextBlock Text="{x:Bind Data.Description}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </base:AppTitleBar.Footer>
                </base:AppTitleBar>
                <animations:Implicit.ShowAnimations>
                    <animations:OpacityAnimation
                        From="0.0"
                        To="1.0"
                        Duration="0:0:0.2" />
                    <animations:TranslationAnimation
                        From="0,-40,0"
                        To="0,0,0"
                        Duration="0:0:0.25" />
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:OpacityAnimation
                        From="1.0"
                        To="0.0"
                        Duration="0:0:0.2" />
                    <animations:TranslationAnimation
                        From="0,0,0"
                        To="0,-40,0"
                        Duration="0:0:0.25" />
                </animations:Implicit.HideAnimations>
            </Grid>

            <base:LoadingWidget
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{ext:Locale Name=LoadingAndWait}"
                Visibility="{x:Bind ViewModel.IsFileLoading, Mode=OneWay}" />
            <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.IsFileLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}">
                <local:OverlayTransportControl
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    IsNavigateButtonVisible="{x:Bind Source.CanEpisodeNavigate, Mode=OneWay}"
                    IsNextButtonEnabled="{x:Bind Source.HasNextEpisode, Mode=OneWay}"
                    IsPrevButtonEnabled="{x:Bind Source.HasPrevEpisode, Mode=OneWay}"
                    NextButtonClick="OnNextButtonClick"
                    NextButtonTip="{x:Bind Source.NextEpisodeTip, Mode=OneWay}"
                    PrevButtonClick="OnPrevButtonClick"
                    PrevButtonTip="{x:Bind Source.PrevEpisodeTip, Mode=OneWay}"
                    ViewModel="{x:Bind ViewModel, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.IsControlVisible, Mode=OneWay}">
                    <animations:Implicit.ShowAnimations>
                        <animations:OpacityAnimation
                            From="0.0"
                            To="1.0"
                            Duration="0:0:0.2" />
                        <animations:TranslationAnimation
                            From="0,80,0"
                            To="0,0,0"
                            Duration="0:0:0.25" />
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:OpacityAnimation
                            From="1.0"
                            To="0.0"
                            Duration="0:0:0.2" />
                        <animations:TranslationAnimation
                            From="0,0,0"
                            To="0,80,0"
                            Duration="0:0:0.25" />
                    </animations:Implicit.HideAnimations>
                    <local:OverlayTransportControl.LeftElement>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid
                                x:Name="DanmakuContainer"
                                Margin="0,-40,0,8"
                                Padding="8"
                                Background="{ThemeResource SmokeFillColorDefaultBrush}"
                                CornerRadius="{StaticResource ControlCornerRadius}">
                                <danmaku:DanmakuBox x:Name="DanmakuBox" ViewModel="{x:Bind Source.Danmaku, Mode=OneWay}" />
                            </Grid>

                            <Grid
                                Grid.Row="1"
                                Background="{ThemeResource SmokeFillColorDefaultBrush}"
                                CornerRadius="{StaticResource ControlCornerRadius}">
                                <Button
                                    Padding="8"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="OnVideoInfoButtonClick">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <imageex:ImageEx
                                            Width="80"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            DecodePixelWidth="160"
                                            Source="{x:Bind Source.Cover, Mode=OneWay, Converter={StaticResource BitmapConverter}}"
                                            Stretch="UniformToFill" />
                                        <StackPanel
                                            x:Name="DetailPanel"
                                            Grid.Column="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            Spacing="4">
                                            <base:TrimTextBlock
                                                FontSize="12"
                                                FontWeight="Bold"
                                                MaxLines="1"
                                                Text="{x:Bind Source.SeasonTitle, Mode=OneWay}" />
                                            <base:TrimTextBlock
                                                FontSize="12"
                                                MaxLines="1"
                                                Text="{x:Bind Source.Alias, Mode=OneWay}" />
                                            <StackPanel
                                                Margin="0,4,0,0"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                                <Border
                                                    Padding="8,4"
                                                    Background="{ThemeResource ControlFillColorInputActiveBrush}"
                                                    CornerRadius="8">
                                                    <base:IconTextBlock
                                                        VerticalAlignment="Center"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        IconBrush="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                        Symbol="PlayCircle"
                                                        Text="{x:Bind Source.PlayCount, Mode=OneWay, Converter={StaticResource CountConverter}}"
                                                        ToolTipService.ToolTip="{ext:Locale Name=PlayCount}" />
                                                </Border>
                                                <Border
                                                    Padding="8,4"
                                                    Background="{ThemeResource ControlFillColorInputActiveBrush}"
                                                    CornerRadius="8">
                                                    <base:IconTextBlock
                                                        VerticalAlignment="Center"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        IconBrush="{ThemeResource TextFillColorSecondaryBrush}"
                                                        Symbol="Star"
                                                        Text="{x:Bind Source.FavoriteCount, Mode=OneWay}" />
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Grid>
                    </local:OverlayTransportControl.LeftElement>
                </local:OverlayTransportControl>
                <StackPanel
                    x:Name="SideContainer"
                    Margin="0,0,20,100"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <StackPanel Visibility="{x:Bind ViewModel.IsControlVisible, Mode=OneWay}">
                        <Button
                            Margin="0,0,0,8"
                            Click="OnCommentButtonClick"
                            Style="{StaticResource SidePlayerButtonStyle}"
                            ToolTipService.ToolTip="{ext:Locale Name=Comments}">
                            <ic:SymbolIcon FontSize="16" Symbol="Comment" />
                        </Button>
                        <Button
                            Margin="0,0,0,8"
                            Click="OnEpisodeButtonClick"
                            Style="{StaticResource SidePlayerButtonStyle}"
                            ToolTipService.ToolTip="{ext:Locale Name=Parts}"
                            Visibility="{x:Bind Source.EpisodeSection, Mode=OneWay, Converter={StaticResource ObjectToVisibilityConverter}}">
                            <ic:SymbolIcon FontSize="16" Symbol="AppsList" />
                        </Button>
                        <Button
                            Margin="0,0,0,8"
                            Click="OnSeasonButtonClick"
                            Style="{StaticResource SidePlayerButtonStyle}"
                            ToolTipService.ToolTip="{ext:Locale Name=UgcSeason}"
                            Visibility="{x:Bind Source.SeasonSection, Mode=OneWay, Converter={StaticResource ObjectToVisibilityConverter}}">
                            <ic:SymbolIcon FontSize="16" Symbol="Grid" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <!--  视频信息  -->
        <Grid
            Width="380"
            Margin="20"
            HorizontalAlignment="Left"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="{StaticResource OverlayCornerRadius}"
            RowSpacing="4"
            Visibility="{x:Bind Source.IsInfoSectionPanelVisible, Mode=OneWay}">
            <player:PgcInfoSection x:Name="PgcInfoSec" ViewModel="{x:Bind Source, Mode=OneWay}" />
            <animations:Implicit.ShowAnimations>
                <animations:OpacityAnimation
                    From="0.0"
                    To="1.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="-80,0,0"
                    To="0,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.ShowAnimations>
            <animations:Implicit.HideAnimations>
                <animations:OpacityAnimation
                    From="1.0"
                    To="0.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="0,0,0"
                    To="-80,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.HideAnimations>
        </Grid>

        <!--  视频分集  -->
        <Grid
            Width="380"
            Margin="20"
            HorizontalAlignment="Right"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="{StaticResource OverlayCornerRadius}"
            RowSpacing="4"
            Visibility="{x:Bind Source.IsEpisodeSectionPanelVisible, Mode=OneWay}">
            <player:PgcEpisodesSection
                x:Name="PartSec"
                x:Load="{x:Bind Source.IsEpisodeSectionPanelLoaded, Mode=OneWay}"
                ViewModel="{x:Bind Source.EpisodeSection, Mode=OneWay}" />
            <animations:Implicit.ShowAnimations>
                <animations:OpacityAnimation
                    From="0.0"
                    To="1.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="80,0,0"
                    To="0,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.ShowAnimations>
            <animations:Implicit.HideAnimations>
                <animations:OpacityAnimation
                    From="1.0"
                    To="0.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="0,0,0"
                    To="80,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.HideAnimations>
        </Grid>

        <!--  剧集合集  -->
        <Grid
            Width="380"
            Margin="20"
            HorizontalAlignment="Right"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="{StaticResource OverlayCornerRadius}"
            RowSpacing="4"
            Visibility="{x:Bind Source.IsSeasonSectionPanelVisible, Mode=OneWay}">
            <player:PgcSeasonsSection
                x:Name="SeasonSec"
                x:Load="{x:Bind Source.IsSeasonSectionPanelLoaded, Mode=OneWay}"
                ViewModel="{x:Bind Source.SeasonSection, Mode=OneWay}" />
            <animations:Implicit.ShowAnimations>
                <animations:OpacityAnimation
                    From="0.0"
                    To="1.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="80,0,0"
                    To="0,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.ShowAnimations>
            <animations:Implicit.HideAnimations>
                <animations:OpacityAnimation
                    From="1.0"
                    To="0.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="0,0,0"
                    To="80,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.HideAnimations>
        </Grid>

        <!--  评论  -->
        <Grid
            Width="380"
            Margin="20"
            HorizontalAlignment="Right"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="{StaticResource OverlayCornerRadius}"
            RowSpacing="4"
            Visibility="{x:Bind Source.IsCommentSectionPanelVisible, Mode=OneWay}">
            <comment:CommentMainPanel
                x:Name="CommentSec"
                x:Load="{x:Bind Source.IsCommentSectionPanelLoaded, Mode=OneWay}"
                ViewModel="{x:Bind Source.CommentSection, Mode=OneWay}" />
            <animations:Implicit.ShowAnimations>
                <animations:OpacityAnimation
                    From="0.0"
                    To="1.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="80,0,0"
                    To="0,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.ShowAnimations>
            <animations:Implicit.HideAnimations>
                <animations:OpacityAnimation
                    From="1.0"
                    To="0.0"
                    Duration="0:0:0.2" />
                <animations:TranslationAnimation
                    From="0,0,0"
                    To="80,0,0"
                    Duration="0:0:0.25" />
            </animations:Implicit.HideAnimations>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="FullState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="880" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="DanmakuBox.IsTextBoxVisible" Value="False" />
                        <Setter Target="DetailPanel.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState x:Name="SideControlVisibleState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="420" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="SideControlCollapsedState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SideContainer.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</local:MpvPlayerControlBase>
